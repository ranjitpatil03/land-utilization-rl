      "id": "R-SETBACK-URBAN",
      "description": "Urban setback depends on road width.",
      "conditions": {
        "location": "urban"
      },
      "logic": [
        {
          "if": {
            "road_width_gte": 12
          },
          "setback": 3.0
        },
        {
          "else": true,
          "setback": 1.5
        }
      ]
    },
